<div class="container">    
	<div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="panel-title">Sign Up</div>
			</div>     
			<div style="padding-top:30px" class="panel-body">
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						<%= f.error_notification %>
						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
							<%= f.input_field :email, required: true, autofocus: true, :class => "form-control", :placeholder => "Email" %>
						</div>
						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
							<%= f.input_field :password, required: true, :class => "form-control", :placeholder => "Email", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
						</div>
						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
							<%= f.input_field :password_confirmation, required: true, :class => "form-control", :placeholder => "Email" %>
						</div>
						<div style="margin-top:10px" class="form-group">
							<%= f.button :submit, "Sign up", :class => "btn btn-default" %>
						</div>
						<div id="loginborder">
							<%= render "devise/shared/links" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
