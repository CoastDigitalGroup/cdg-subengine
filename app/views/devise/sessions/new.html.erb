<div class="container">    
	<div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="panel-title">User Sign-In</div>
			</div>     
			<div style="padding-top:30px" class="panel-body">
				<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <%= f.error_notification %>
					<div style="margin-bottom: 25px" class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
						<%= f.input_field :email, required: false, autofocus: true, :class => "form-control", :placeholder => "Email" %>
					</div>
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
						<%= f.input_field :password, required: false, :class => "form-control", :placeholder => "Password" %>
					</div>
          <div class="checkbox">
						<%= f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable? %>
					</div>					
					<div style="margin-top:10px" class="form-group">
            <div class="col-sm-12 controls">
              <%= f.button :submit, "Sign-In", :class => "btn btn-default" %>
            </div>
          </div>
					<div id="loginborder" >
						<%= render "devise/shared/links" %>
					</div>
				<% end %>
			</div>
		</div>  
	</div>
</div>
